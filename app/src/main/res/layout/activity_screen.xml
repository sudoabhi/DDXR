<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_screen"

        android:elevation="24dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/splash1"
            android:background="@color/best"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/svimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/azo"
            android:text="SOCIAL VENTS"
            android:textColor="#aea5a5"
            android:textSize="30dp"
            android:textStyle="bold" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/svimg"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/hackicon"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"
            android:layout_centerInParent="true" />
    </RelativeLayout>




    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fillViewport="true"
        android:fitsSystemWindows="true">




        <RelativeLayout

            android:id="@+id/outer"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <RelativeLayout
                android:id="@+id/inner1"
                android:minHeight="350dp"
                android:background="@drawable/screen_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/logo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/hackicon"
                    app:civ_border_color="#24292B"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/textddxr"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/azo"
                    android:text="ddxr"
                    android:textColor="#FFF"
                    android:textSize="58sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_below="@+id/textddxr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/azo"
                    android:text="user"
                    android:textColor="#FFF"
                    android:textSize="28sp" />






            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/inner1"
                android:id="@+id/inner2"
                android:minHeight="350dp"
                android:background="#ec24292B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#FFF" />


                <Button
                    android:id="@+id/google_button"
                    android:layout_below="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/round2"
                    android:backgroundTint="#CE1919"
                    android:drawableStart="@drawable/ic_google"
                    android:fontFamily="@font/azo"
                    android:foreground="?selectableItemBackground"
                    android:paddingStart="10dp"
                    android:text="Continue with Google        "
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <!--
                <Button
                android:id="@+id/fb_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round"
                android:backgroundTint="#3b5998"
                android:elevation="8dp"
                android:paddingHorizontal="15dp"
                android:drawableStart="@drawable/ic_fb"
                android:text="Continue with Facebook"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />-->


                <Button
                    android:id="@+id/email_button"
                    android:layout_below="@+id/google_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round2"
                    android:backgroundTint="#607D8B"
                    android:drawableStart="@drawable/ic_mail"
                    android:fontFamily="@font/azo"
                    android:foreground="?selectableItemBackground"
                    android:paddingStart="10dp"
                    android:text="Continue with Email        "
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_below="@+id/email_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:text="By continuing, you agree to our"
                    android:textColor="#fff" />

                <LinearLayout
                    android:layout_below="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:text="@string/privacy"
                        android:textColor="#1D7CF7"
                        android:focusable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" and "
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:text="@string/tnc"
                        android:textColor="#1D7CF7"
                        android:foreground="?selectableItemBackground"
                        android:focusable="true" />
                </LinearLayout>




            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>






</RelativeLayout>