<?xml version="1.0" encoding="utf-8"?>


<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ProgressBar
        android:elevation="12dp"
        android:padding="5dp"
        android:id="@+id/progress_bar2"



        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="?android:attr/progressBarStyle"/>



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.androdev.ddxr.PaytmPAYMENT.TicketActivity">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/mainColor"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:titleTextColor="@color/white"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize">


        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Verified"
                    android:textSize="14sp"
                    android:id="@+id/verification_check"
                    android:textColor="@color/black"
                    android:fontFamily="@font/azo"
                    android:layout_gravity="right"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/qrCode"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Attendee Name"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/AttendeeName"
                        android:textSize="16sp"
                        android:text=": Ashutosh Mishra"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Booking Time"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/BookingTime"
                        android:textSize="16sp"
                        android:text=": 16th Febraury 2020 at 06:20 A.M."
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Event Name"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/EventName"
                        android:textSize="16sp"
                        android:text=": UietHack"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:text="Ticket Name"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/TicketName"
                        android:text=": Attendee"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_TeamName"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:text="Team Name"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/TeamName"
                        android:text=": Attendee"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/pl_team"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Team"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />



                    <ListView
                        android:id="@+id/list_view"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:dividerHeight="0dp"
                       android:divider="@null"
                        android:layout_height="wrap_content">

                    </ListView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:text="Ticket Description"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/TicketDescription"
                        android:text=": This is almost he hell no yes ehy nosdbo bsobcosbcoscbsoc soc osc cis "
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Event Schedule"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/Date"
                        android:text=": 25/12/2019 - 30/1/2020 "
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Fee Paid"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/FeePaid"
                        android:textSize="16sp"


                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:textSize="16sp"
                        android:text="For more info"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:text=": "
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:autoLink="web"
                        android:id="@+id/WebLink"
                        android:textSize="16sp"
                        android:textColor="@color/blue"

                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Order ID"
                        android:textSize="16sp"
                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/OrderID"
                        android:textSize="16sp"

                        android:fontFamily="@font/azo"
                        android:layout_height="wrap_content" />


                </LinearLayout>









            </LinearLayout>



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/pl_invite"
            android:elevation="12dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#ff0000"
                    android:textSize="19sp"
                    android:fontFamily="@font/azo"
                    android:text="Invite your team members:"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/azo"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:id="@+id/inviteurl"
                        android:layout_alignParentLeft="true"
                        android:textIsSelectable="true"


                        android:layout_height="wrap_content" />


                    <ImageView
                        android:id="@+id/send_whatsapp"
                        android:background="@drawable/ic_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content" />



                </RelativeLayout>






            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>


</FrameLayout>




